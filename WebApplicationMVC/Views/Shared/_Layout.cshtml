
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrillaCar CarWash</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/WebApplicationMVC.styles.css")" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="@Url.Content("~/img/Brillacar-Logo.png")" rel="icon" />
</head>
<body>
    <header  >
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark fixed-top ">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" asp-area="" asp-controller="Home" asp-action="Index"><img src="@Url.Content("~/img/Brillacar-Logo.png")" alt="Logo BrillaCar" style="width:100px; height:80px" /></a>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav ms-auto fs-4">
                        <li class="nav-item mx-2">
                            <a class=" nav-link text-white " asp-action="Index" asp-controller="Home"><strong>Home</strong></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class=" nav-link text-white" href="#servicios"><strong>Servicios</strong></a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class=" nav-link text-white" href="#conocenos"><strong>Contactanos</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="">
        @RenderBody()
    </main>


    <footer class="border-top footer text-muted text-center">
        <div class="container-fluid">
            &copy; 2025 BrillaCar. Todos los derechos reservados. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Servicios</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
