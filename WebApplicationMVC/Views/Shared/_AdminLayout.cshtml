<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrillaCar CarWash</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/WebApplicationMVC.styles.css")" asp-append-version="true" />
    <link href="@Url.Content("~/img/Brillacar-Logo.png")" rel="icon" />
</head>
<body>
    <header style="margin-bottom:200px">
        <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand mx-5" asp-area="" asp-controller="Admin" asp-action="AdminHome"><img src="@Url.Content("~/img/Brillacar-Logo.png")" alt="Logo BrillaCar" style="width:100px; height:80px" /></a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end fs-4 mx-5">
                        <li class="nav-item mx-2">
                            <a class="nav-link  p-0" asp-area="" asp-controller="Admin" asp-action="AdminHome">Home</a>
                        </li>
                        <li class="nav-item mx-2 ">
                            <a class="nav-link  p-0" asp-area="" asp-controller="Admin" asp-action="AdminServicios">Servicios</a>
                        </li>
                        <li class="nav-item mx-2 ">
                            <a class="nav-link  p-0" asp-area="" asp-controller="UsuarioView" asp-action="AdminUsuarios">Usuarios</a>
                        </li>
                        <li class="nav-item mx-2 ">
                            <a class="nav-link  p-0" asp-area="" asp-controller="ClienteView" asp-action="AdminClientes">Clientes</a>
                        </li>
                        <li class="nav-item mx-2 ">
                            <a class="nav-link  p-0" asp-area="" asp-controller="Admin" asp-action="Vehiculos">Vehiculos</a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2025 BrillaCar. Todos los derechos reservados. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Servicios</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Contenedor de toasts -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toastMessage" class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="min-width: 300px;">
            <div class="toast-header">
                <strong class="me-auto" id="toastTitle">Notificación</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastBody"></div>
        </div>
    </div>

    <script>
        // Mostrar toast si hay mensaje en TempData
        const message = '@TempData["ToastMessage"]';
        const type = '@TempData["ToastType"]';

        if (message) {
            const toastElement = document.getElementById('toastMessage');
            const toastBody = document.getElementById('toastBody');
            const toastTitle = document.getElementById('toastTitle');

            // Cambiar el contenido del toast
            toastBody.textContent = message;
            if (type === 'success') {
                toastTitle.textContent = 'Éxito';
                toastElement.classList.add('bg-success', 'text-white');
            } else if (type === 'error') {
                toastTitle.textContent = 'Error';
                toastElement.classList.add('bg-danger', 'text-white');
            }

            // Mostrar el toast
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
        }
    </script>
</body>
</html>
