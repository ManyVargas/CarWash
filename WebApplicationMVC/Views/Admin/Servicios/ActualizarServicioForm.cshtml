@model Application.UsesCases.Servicios.ActualizarServicio.ActualizarServicioRequest

@{
    ViewData["Title"] = "Actualizar Servicio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <form asp-controller="ServicioView" asp-action="ActualizarServicioSubmit" method="post">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre del servicio" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" class="form-control" placeholder="Descripción del servicio" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" placeholder="Precio del servicio" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DuracionMinutos" class="form-label"></label>
            <input asp-for="DuracionMinutos" class="form-control" placeholder="Duración en minutos" />
            <span asp-validation-for="DuracionMinutos" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>
</div>
